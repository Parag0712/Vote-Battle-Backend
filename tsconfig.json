{
    "compilerOptions": {
      "rootDirs": ["src","src/custom-types.d.ts"],
      "outDir": "dist",
    "target": "ES2020",
      "lib": ["es2020"],
      "esModuleInterop": true,
      "types": ["node"],
      "strict": true,
      "module": "ES2020",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
  
    },
    "include": ["src"]
  }